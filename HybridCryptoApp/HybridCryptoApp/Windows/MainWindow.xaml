<Window x:Class="HybridCryptoApp.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HybridCryptoApp.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Name="LoginButton" Width="70" Content="Login" Click="LoginButton_Click"></Button>
        <Button Name="RegisterButton" Width="70" Content="Register" Click="RegisterButton_Click"></Button>
        <Button Name="OfflineButton" Width="70" Content="Offline" Click="OfflineButton_Click"></Button>
    </StackPanel>
</Window>
